                .row 
                    .intro__product.row
                        .intro__img
                            img.intro__img(src='/assets/wine-63931_12802-1240x829.jpg' alt="")
                        .highlight.col-lg-10.offset-lg-1.col-12 
                            .highlight__wrapper 
                                .highlight__img 
                                    img.highlight__img(src="/assets/df3218bb45274009c6c3d5de8a6b98bf.jpg" alt="")
                                .highlight__info 
                                    h2.subtitle.highlight__title Rượu nho năm 1987
                                    .highlight__price 350.000 VNĐ 
                                    a.btn.button.btn--black Add to cart 
