                                    ul.time 
                                        li.time__item 334 ngày
                                        li.time__item 334 ngày
                                        li.time__item 334 ngày
                                        li.time__item 334 ngày
        section.new-product.py-5 
            .container.text-center 
                +title("Sản phẩm mới")
                #new-product.carousel-home.carousel.slide.py-5(data-bs-ride='carousel')
                    .carousel-inner
                        .carousel-item.active
                            .row 
                                each product in newProduct 
                                    .col-lg-3.col-md-6
                                        +cardItem(product)
                        .carousel-item
                            .row
                                each product in newProduct 
                                    .col-lg-3.col-md-6
                                        +cardItem(product)
                        .carousel-item
                            .row
                                each product in newProduct 
                                    .col-lg-3.col-md-6
                                        +cardItem(product)
                    button.carousel-control-prev(type='button' data-bs-target='#new-product' data-bs-slide='prev')
                        i.fa.fa-arrow-left
                        span.visually-hidden Previous
                    button.carousel-control-next(type='button' data-bs-target='#new-product' data-bs-slide='next')
                        i.fa.fa-arrow-right
                        span.visually-hidden Next
        section.albums.py-5 
            ul.albums__list
                each item in homeImg
                    li.albums__item 
                        img.albums__img(src=item.src alt=item.alt)
                        .albums__content.text-center 
                            .albums__year=item.year 
                            .albums__desc 
                                h2.albums__title=item.title
        section.bestseller.py-5 
            .container.text-center 
                +title("Sản phẩm bán chạy")
                #bestseller.carousel-home.carousel.slide.py-5(data-bs-ride='carousel')
                    .carousel-inner
                        .carousel-item.active
                            .row
                                each product in bestseller 
                                    .col-lg-3.col-md-6
                                        +cardItem(product)
                        .carousel-item
                            .row
                                each product in bestseller 
                                    .col-lg-3.col-md-6
                                        +cardItem(product)
                    button.carousel-control-prev(type='button' data-bs-target='#bestseller' data-bs-slide='prev')
                        i.fa.fa-arrow-left
                        span.visually-hidden Previous
                    button.carousel-control-next(type='button' data-bs-target='#bestseller' data-bs-slide='next')
                        i.fa.fa-arrow-right
                        span.visually-hidden Next
        section.blog    
            .container 
                .row
                    .col-lg-8
                        .row
                            +title("Tin tức & blog")
                            .col-md-6.col-12.pt-4
                                +cardNew(homeNews1)
                            .col-md-6.col-12.pt-4 
                                +cardNew(homeNews2)
                    .col-lg-4
                        article.customer.text-center
                            +title("Khách hàng")
                            img.customer__quote.pt-4(src="/assets/quote.png" alt="quote")
                            .news__desc Vang nổ Thăng Long có hương vị đặc trưng của sản phẩm lên men tự nhiên từ hoa quả với độ rượu nhẹ, bọt ga đầy trắng mịn. Vang Nổ thăng long...
                            a.news__more(href="") Read more
                            .customer__main 
                                #customer.carousel-home.carousel.slide(data-bs-ride='carousel')
                                    .carousel-inner
                                        each item in customerData
                                            .carousel-item(class=item.class)
                                                img.customer__img(src=item.src alt=item.alt)
                                                .customer__name=item.name
                                                .customer__position=item.position
